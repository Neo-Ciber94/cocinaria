{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".svelte-kit/**",
                "dist/**"
            ],
            "env": [
                "DATABASE_URL",
                "GOOGLE_CLIENT_ID",
                "GOOGLE_CLIENT_SECRET",
                "GITHUB_CLIENT_ID",
                "GITHUB_CLIENT_SECRET",
                "DISCORD_CLIENT_ID",
                "DISCORD_CLIENT_SECRET"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "check": {
            "cache": false,
            "dependsOn": [
                "^check"
            ]
        },
        "test": {},
        "lint": {},
        "format": {}
    }
}